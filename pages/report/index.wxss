.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.charts-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.chart-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.chart {
  width: 100%;
  height: 400rpx;
}

.ai-analysis {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.analysis-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.analysis-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.data-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.list-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.item-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-date {
  font-size: 24rpx;
  color: #999;
}

.item-category {
  font-size: 26rpx;
  color: #666;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.item-name {
  font-size: 26rpx;
  color: #333;
}

.item-amount {
  font-size: 28rpx;
  font-weight: 500;
}

.item-amount.expense {
  color: #1890ff;
}

.item-amount.income {
  color: #ff4d4f;
}

.report-list {
  padding: 20rpx 0;
}

.van-cell {
  padding: 20rpx 30rpx !important;
}

.van-cell__title {
  font-size: 28rpx !important;
}

.van-cell__value {
  color: var(--primary-color) !important;
  font-weight: bold;
} 