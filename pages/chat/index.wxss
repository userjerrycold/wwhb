/* 详情弹窗 */
.detail-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
}

.detail-popup .popup-mask {
  z-index: 2001;
}

.detail-popup .popup-content {
  z-index: 2002;
}

.detail-content .popup-body {
  padding: 30rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: center;
}

.detail-value.income {
  color: #ff4d4f;
}

.detail-value.expense {
  color: #1890ff;
}