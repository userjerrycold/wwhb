/* 聊天容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 账单统计区域 */
.bill-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx 0; /* 上下内边距保留，左右设为0 */
  overflow-y: auto;
}

/* 消息项基础样式 */
.message-item {
  display: flex;
  margin-bottom: 40rpx;
  align-items: flex-start;
  padding: 0 30rpx; /* 左右内边距确保不贴边 */
  box-sizing: border-box;
}

/* 自己发送的消息 */
.message-item.self {
  flex-direction: row-reverse;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0; /* 防止头像被压缩 */
}

/* 他人消息头像间距 */
.message-item:not(.self) .avatar {
  margin-right: 20rpx;
  margin-left: 0;
}

/* 自己消息头像间距 */
.message-item.self .avatar {
  margin-left: 20rpx;
  margin-right: 0;
}

/* 消息内容区域 */
.message-content {
  max-width: calc(70% - 20rpx); /* 减去头像的margin */
  position: relative;
}

/* 文本消息样式 */
.text-message {
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 自己发送的文本消息 */
.message-item.self .text-message {
  background-color: #95EC69;
  color: #333;
}

/* 他人发送的文本消息 */
.message-item:not(.self) .text-message {
  background-color: #fff;
  color: #333;
}

/* 消费记录消息样式 */
.consumption-wrapper {
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  min-width: 450rpx;
  max-width: 600rpx;
}

.consumption-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4rpx 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 16rpx;
}

.success-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.header-right {
  color: #999;
  font-size: 24rpx;
  line-height: 32rpx;
}

.consumption-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item-row {
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}

.item-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.item-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.category-name {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  width: 100%;
  text-align: right;
  padding-right: 4rpx;
  margin-top: 8rpx;
  margin-bottom: 16rpx;
}

.transaction-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 16rpx;
}

.transaction-type {
  font-size: 28rpx;
  color: #666;
}

.amount {
  font-size: 34rpx;
  font-weight: 600;
}

.amount.expense {
  color: #1890ff;
}

.amount.income {
  color: #ff4d4f;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 8rpx 0;
  margin-top: 8rpx;
  border-top: 1px solid #eee;
}

.action-button {
  display: flex;
  align-items: center;
  padding: 4rpx;
}

.action-button image {
  width: 32rpx;
  height: 32rpx;
}

.action-button text {
  font-size: 24rpx;
  color: #666;
}

.action-button:active {
  background: #e8e8e8;
}

/* AI消息样式 */
.message-item.ai .text-message {
  background: #fff;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
}

.message-time {
  display: none;
}

/* 输入区域 */
.input-area {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.input-box {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 加载动画 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  margin: 20rpx 0;
}

.loading-dots {
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #1890ff;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 自己发送的消费记录特殊样式 */
.message-item.self .consumption-wrapper {
  background: #fff;
}

.message-item.self .category-name {
  color: #333;
}

.message-item.self .item-name {
  color: #000;
}