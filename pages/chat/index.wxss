.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 账单统计区域 */
.bill-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message-item.self {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content {
  max-width: 70%;
  position: relative;
}

/* 消费记录消息样式 */
.consumption-wrapper {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.consumption-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.category-name {
  font-size: 28rpx;
  color: #666;
}

.consumption-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.amount {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* 文本消息样式 */
.text-message {
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-item.self .text-message {
  background-color: #95EC69;
  color: #000;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 输入区域样式 */
.input-area {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.input-box {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 加载动画 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  margin: 20rpx 0;
}

.loading-dots {
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #1890ff;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.message-item.self .consumption-wrapper {
  background-color: #95EC69;
}

.message-item.self .category-name {
  color: #333;
}

.message-item.self .item-name {
  color: #000;
} 