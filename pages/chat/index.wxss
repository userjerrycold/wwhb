/* 聊天容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 账单统计区域 */
.bill-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-values {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-value {
  font-size: 26rpx;
  font-weight: 500;
}

.stat-value.expense {
  color: #1890ff;
}

.stat-value.income {
  color: #ff4d4f;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx 0;
  overflow-y: auto;
}

/* 消息项基础样式 */
.message-item {
  display: flex;
  margin-bottom: 40rpx;
  align-items: flex-start;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 自己发送的消息 - 淡黄色气泡 */
.message-item.self .message-content .text-message,
.message-item.self .message-content .consumption-wrapper {
  background-color: #FFF9E6; /* 淡黄色背景 */
  border-radius: 24rpx 24rpx 4rpx 24rpx; /* 气泡形状，右侧圆角更大 */
  position: relative;
}

/* 自己消息的气泡小三角 */
.message-item.self .message-content::after {
  content: "";
  position: absolute;
  right: -8rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-left-color: #FFF9E6;
  border-right: 0;
}

/* 他人发送的消息 - 白色气泡 */
.message-item:not(.self) .message-content .text-message,
.message-item:not(.self) .message-content .consumption-wrapper {
  background-color: #FFFFFF; /* 白色背景 */
  border-radius: 24rpx 24rpx 24rpx 4rpx; /* 气泡形状，左侧圆角更大 */
  position: relative;
}

/* 他人消息的气泡小三角 */
.message-item:not(.self) .message-content::before {
  content: "";
  position: absolute;
  left: -8rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #FFFFFF;
  border-left: 0;
}

/* 自己发送的消息 */
.message-item.self {
  flex-direction: row-reverse;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

/* 他人消息头像间距 */
.message-item:not(.self) .avatar {
  margin-right: 20rpx;
  margin-left: 0;
}

/* 自己消息头像间距 */
.message-item.self .avatar {
  margin-left: 20rpx;
  margin-right: 0;
}

/* 消息内容区域 */
.message-content {
  max-width: calc(70% - 20rpx);
  position: relative;
}

/* 文本消息样式 */
.text-message {
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 消费记录消息样式 */
.consumption-wrapper {
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  min-width: 450rpx;
  max-width: 600rpx;
  position: relative;
}

.consumption-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4rpx 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 16rpx;
}

.success-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.header-right {
  color: #999;
  font-size: 24rpx;
  line-height: 32rpx;
}

.consumption-details {
  display: flex;
  flex-direction: column;
}

.consumption-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.item-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.category-name {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
}

.income-expense {
  font-size: 28rpx;
  color: #666;
}

.item-amount {
  font-size: 30rpx;
  font-weight: 500;
  min-width: 120rpx;
  text-align: right;
}

.item-amount.income {
  color: #ff4d4f;
}

.item-amount.expense {
  color: #1890ff;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 8rpx 0;
  margin-top: 8rpx;
  border-top: 1px solid #eee;
}

.action-button {
  display: flex;
  align-items: center;
  padding: 4rpx;
}

.action-button image {
  width: 32rpx;
  height: 32rpx;
}

/* 其他样式保持不变... */

/* 加载动画 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  margin: 20rpx 0;
}

.loading-dots {
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #1890ff;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 输入区域 */
.input-area {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.input-box {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 报表弹窗和详情弹窗样式保持不变... */

/* 报表弹窗 */
.report-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.popup-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  z-index: 1002;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-btn.close {
  background: #999;
}

.popup-body {
  padding: 20rpx;
  max-height: calc(80vh - 100rpx);
  overflow-y: auto;
}

.report-summary {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
}

.summary-value.income {
  color: #ff4d4f;
}

.summary-value.expense {
  color: #1890ff;
}

.chart-container {
  height: 400rpx;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.report-analysis {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.analysis-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.analysis-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.report-details {
  padding: 20rpx 0;
}

.details-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.details-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.details-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.details-item .item-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.details-item .item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.details-item .item-category {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.details-item .item-name {
  font-size: 28rpx;
  color: #333;
}

.details-item .item-amount {
  font-size: 30rpx;
  font-weight: 500;
  min-width: 120rpx;
  text-align: right;
}

.details-item .item-amount.income {
  color: #ff4d4f;
}

.details-item .item-amount.expense {
  color: #1890ff;
