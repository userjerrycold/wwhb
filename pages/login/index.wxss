/* 基础样式重置 */
page {
  background: linear-gradient(135deg, #FFD6E8 0%, #E9F0FF 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 科技感网格背景 */
page::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    linear-gradient(rgba(255,255,255,0.2) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255,255,255,0.2) 1px, transparent 1px);
  background-size: 30px 30px;
  z-index: -1;
}

.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  max-width: 840rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 16rpx 64rpx rgba(93, 123, 255, 0.15);
  backdrop-filter: blur(16rpx);
  text-align: center;
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 标题样式 */
.title-container {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #FF5D8F;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
  font-family: 'Ma Shan Zheng', cursive, sans-serif;
  text-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  display: inline-block;
}

.title::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(90deg, #FF5D8F, #5D7BFF);
  border-radius: 6rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
  letter-spacing: 2rpx;
}

/* AI芯片图标 */
.ai-chip {
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #5D7BFF, #FF5D8F);
  border-radius: 24rpx;
  position: relative;
  box-shadow: 0 8rpx 24rpx rgba(93, 123, 255, 0.3);
}

.ai-chip::before {
  content: "AI";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-weight: bold;
  font-size: 28rpx;
}

/* 输入框容器 */
.input-container {
  margin-bottom: 50rpx;
  text-align: left;
}

/* 按钮容器 */
.button-container {
  margin-top: 60rpx;
}

/* AI欢迎语 */
.welcome-message {
  font-size: 24rpx;
  color: #888;
  margin-top: 40rpx;
  font-style: italic;
}

/* 页脚版权信息 */
.footer {
  margin-top: 60rpx;
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid rgba(93, 123, 255, 0.1);
  padding-top: 30rpx;
} 